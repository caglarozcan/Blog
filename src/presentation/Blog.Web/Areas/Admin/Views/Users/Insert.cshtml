@model Blog.Application.Dto.UserDto.UserInsertDto
@{
    ViewBag.Title = "Kullanıcı Yönetimi";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayout.cshtml";
}

<div class="breadcrumbs">
    <h4>Kullanıcı Ekle</h4>
    <ul>
        <li><a asp-route="AdminHome">Anasayfa</a></li>
        <li>
            <i class="fa-duotone fa-angle-right fa-fw fc-blue"></i>
        </li>
        <li><a asp-route="AdminUsers">Kullanıcı Yönetimi</a></li>
        <li>
            <i class="fa-duotone fa-angle-right fa-fw fc-blue"></i>
        </li>
        <li>Kullanıcı Ekle</li>
    </ul>
</div>

<div class="wrapper">
    <div class="grid">
        <div class="col-12">
            <form asp-route="UserInsert" asp-antiforgery="true" method="post" id="user-insert-from">
                <div class="card">
                    <div class="card-header">
                        <h4>
                            <span class="svg-icon svg-icon-primary svg-icon-2x">
                                <!--begin::Svg Icon | path:/var/www/preview.keenthemes.com/metronic/releases/2021-05-14-112058/theme/html/demo1/dist/../src/media/svg/icons/Communication/Add-user.svg-->
