@model Blog.Application.Dto.UserDto.UserLoginDto
@{
	Layout = "~/Areas/Admin/Views/Shared/_LoginLayout.cshtml";
}

<div class="login-box">

	<div class="logo">
		<img src="~/images/logo.png" />
	</div>

	<form asp-route="AdminLogin" method="post" asp-antiforgery="true">
		<div class="form-group">
			<label class="label" asp-for="Email">Username</label>
			<input type="text" asp-for="Email" placeholder="Email Adresi" class="input" />
			<span asp-validation-for="Email"></span>
		</div>
		<div class="form-group">
			<label class="label" asp-for="Password"></label>
			<input type="password" asp-for="Password" placeholder="Şifre" class="input" />
			<span asp-validation-for="Password"></span>
		</div>
		<div class="form-group text-center">
			<input type="submit" class="btn btn-blue" value="Giriş Yap" />
		</div>
	</form>
</div>