<div class="wrapper">
	<div class="grid">
		<div class="col-12">
			<div class="card">
				<div class="card-header">
					<h4>Yüklü İçerikler</h4>

					<div class="dropdown">
						<a href="javascript:void(0)" data-dropdown="#card-menu">
							<i class="cdi cdi-menu"></i>
						</a>
						<div class="drop-down" id="card-menu">
							<ul>
								<li><a asp-route="FileUpload"><i class="cdi cdi-cloud-upload"></i>&nbsp;&nbsp;Medya Yükle</a></li>
								<li><a asp-route="MediaType"><i class="cdi cdi-admin-tools"></i>&nbsp;&nbsp;Medya Türleri</a></li>
							</ul>
						</div>
					</div>
				</div>
				<div class="card-body pd" id="image-galley-content">
					<div class="gallery" data-columns="10" id="main-gallery"></div>
				</div>
			</div>
		</div>
	</div>
</div>

<script>
	document.addEventListener('DOMContentLoaded', () => {
		var gallery = new PhotoGallery({ selector: '#main-gallery', perData: 32 });

		const galleryContent = document.getElementById('image-galley-content');
		const mainGallery = document.getElementById('main-gallery');
		let idealColumnSize = galleryContent.clientWidth < 640 ? 135 : 150;

		window.addEventListener('resize', (e) => {
			let columnSize = Math.min(Math.round(galleryContent.clientWidth / idealColumnSize), 10) || 1;
			mainGallery.setAttribute('data-columns', columnSize);
		});
	});
</script>
