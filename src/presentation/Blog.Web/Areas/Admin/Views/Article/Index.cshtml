@{
	ViewBag.Title = "Makale Yönetimi";
	Layout = "~/Areas/Admin/Views/Shared/_MainLayout.cshtml";
}

<div class="breadcrumbs">
	<h4>Makale Yönetimi</h4>
	<ul>
		<li><a asp-route="AdminHome">Anasayfa</a></li>
		<li>
			<i class="cdi cdi-arrow-right-alt2"></i>
		</li>
		<li>Makale Yönetimi</li>
	</ul>
</div>

<div class="wrapper">
	<div class="grid">
		<div class="col-12">
			<div class="card">
				<div class="card-header pd-x">
					<h4>Makaleler</h4>
					<div class="dropdown">
						<a href="javascript:void(0)" data-dropdown="#card-menu">
							<span class="svg-icon svg-icon-primary svg-icon-x">
                                <!--begin::Svg Icon-->
                                <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                                    <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                        <rect x="0" y="0" width="24" height="24" />
                                        <rect fill="#000000" x="4" y="5" width="16" height="3" rx="1.5" />
                                        <path d="M5.5,15 L18.5,15 C19.3284271,15 20,15.6715729 20,16.5 C20,17.3284271 19.3284271,18 18.5,18 L5.5,18 C4.67157288,18 4,17.3284271 4,16.5 C4,15.6715729 4.67157288,15 5.5,15 Z M5.5,10 L18.5,10 C19.3284271,10 20,10.6715729 20,11.5 C20,12.3284271 19.3284271,13 18.5,13 L5.5,13 C4.67157288,13 4,12.3284271 4,11.5 C4,10.6715729 4.67157288,10 5.5,10 Z" fill="#000000" opacity="0.3" />
                                    </g>
                                </svg><!--end::Svg Icon-->
                            </span>
						</a>
						<div class="drop-down" id="card-menu">
							<ul>
								<li><a asp-route="AdminArticleInsert"><i class="cdi cdi-plus-alt2"></i>&nbsp;&nbsp;Makale Ekle</a></li>
							</ul>
							<ul>
								<li><a asp-route="AdminArticleSeries"><i class="cdi cdi-list-view"></i>&nbsp;&nbsp;Seri Makaleler</a></li>
							</ul>
							<ul>
								<li><a asp-route="AdminArticleSeries"><i class="cdi cdi-book"></i>&nbsp;&nbsp;Kaynakça</a></li>
							</ul>
						</div>
					</div>
				</div>
				<div class="card-body pd">

					<!--Makale listesi-->

					<table class="border-btm">
						<thead>
							<tr>
								<th>
									<input type="checkbox" />
								</th>
								<th>Başlık</th>
								<th>Ekleyen</th>
								<th>Kategori</th>
								<th class="text-center">Eklenme</th>
								<th class="text-center">Okunma</th>
								<th class="text-center">Yorum</th>
								<th class="text-center">Durum</th>
								<th class="text-center">İşlem</th>
							</tr>
						</thead>
						<tbody>
							@for (int i = 1; i <= 20; i++)
							{
								<tr>
									<td><input type="checkbox" /></td>
									<td>Buraya makale başlığı gelecek</td>
									<td>
										<a href="#">Çağlar ÖZCAN</a>
									</td>
									<td>
										<a href="#">kategori1</a>,
										<a href="#">kategori2</a>,
										<a href="#">kategori3</a>
									</td>
									<td class="text-center">10 Ekim 2021 23:36</td>
									<td class="text-center font-numeric">100</td>
									<td class="text-center font-numeric">15</td>
									<td class="text-center">
										<span class="status-success">Yayında</span>
									</td>
									<td class="text-center">
										<div class="dropdown">
											<a href="javascript:void(0)" data-dropdown="#tbl-menu@(Html.Raw(i))">
												<i class="cdi cdi-ellipsis"></i>
											</a>

											<div class="drop-down" id="tbl-menu@(Html.Raw(i))">
												<ul>
													<li><a href="#"><i class="cdi cdi-admin-post"></i>&nbsp;&nbsp;Sabitle</a></li>
													<li><a href="#"><i class="cdi cdi-remove"></i>&nbsp;&nbsp;Engelle</a></li>
													<li><a href="#"><i class="cdi cdi-edit"></i>&nbsp;&nbsp;Güncelle</a></li>
													<li><a href="#"><i class="cdi cdi-menu-alt"></i>&nbsp;&nbsp;Detaylar</a></li>
													<li class="seperator"></li>
													<li><a href="#"><i class="cdi cdi-trash"></i>&nbsp;&nbsp;Sil</a></li>
												</ul>
											</div>
										</div>
									</td>
								</tr>
							}

						</tbody>
					</table>

					<ul class="pagination pg-direction-right">
						<li class="arrow">
							<a href="#">
								<i class="cdi cdi-arrow-left-alt2"></i>
							</a>
						</li>
						<li>
							<a href="#">1</a>
						</li>
						<li>
							<a href="#">2</a>
						</li>
						<li>
							<a href="#">3</a>
						</li>
						<li class="active">
							<a href="#">4</a>
						</li>
						<li>
							<a href="#">5</a>
						</li>
						<li>
							<a href="#">6</a>
						</li>
						<li>
							<a href="#">7</a>
						</li>
						<li class="arrow">
							<a href="#">
								<i class="cdi cdi-arrow-right-alt2"></i>
							</a>
						</li>
					</ul>

					<!--Makale listesi-->

				</div>
			</div>
		</div>
	</div>
</div>